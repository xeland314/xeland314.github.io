---
import BlogPostLayout from "../../../layouts/BlogPostLayout.astro";
import PostFooterBar from "../../../components/blog/PostFooterBar.astro";

const title = "i18n vs l10n";
const description = "Internationalization vs Localization - Key Differences";
---

<BlogPostLayout
  title={title}
  description={description}
  bgColor="bg-slate-900"
  extraFonts="&family=Fira+Code:wght@400"
  lang="en"
>
  <div
    class="relative p-8 md:p-12 flex flex-col text-white overflow-hidden h-full"
  >
    <!-- Language Link -->
    <div class="absolute top-4 right-4 z-50">
      <a
        href="/es/posts/software-i18n-vs-l10n"
        class="glass-tag px-3 py-1 rounded text-slate-400 hover:text-white text-sm font-bold transition-colors"
      >
        ES
      </a>
    </div>

    <!-- Custom Header VS Circle -->
    <div class="relative z-10 flex flex-col items-center mb-8">
      <div
        class="bg-slate-800 text-white w-24 h-24 rounded-full flex items-center justify-center text-4xl font-black border-8 border-white shadow-xl mb-8"
      >
        VS
      </div>
    </div>

    <div class="relative z-10 flex flex-col md:flex-row p-0 md:p-10 gap-10">
      <div class="flex-1 flex flex-col items-center">
        <div
          class="bg-blue-600 text-white rounded-3xl p-6 w-full text-center shadow-lg mb-6"
        >
          <h2 class="text-6xl font-black italic mb-1">i18n</h2>
          <p class="text-xl font-bold opacity-90 uppercase tracking-widest">
            Internationalization
          </p>
          <p class="text-sm opacity-75 mt-1">(I + 18 letters + N)</p>
        </div>
        <p class="text-center text-blue-400 font-semibold text-lg px-4 mb-8">
          Prepare software to adapt to different languages and regions.
        </p>

        <ul class="w-full space-y-4">
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-blue-500/30"
          >
            <span class="text-3xl">‚öôÔ∏è</span>
            <span class="text-blue-300 font-medium text-xl"
              >Separate text from code</span
            >
          </li>
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-blue-500/30"
          >
            <span class="text-3xl">üåê</span>
            <span class="text-blue-300 font-medium text-xl"
              >Unicode support (UTF-8)</span
            >
          </li>
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-blue-500/30"
          >
            <span class="text-3xl">üìÖ</span>
            <span class="text-blue-300 font-medium text-xl"
              >Flexible formats</span
            >
          </li>
        </ul>
      </div>

      <div class="flex-1 flex flex-col items-center">
        <div
          class="bg-orange-500 text-white rounded-3xl p-6 w-full text-center shadow-lg mb-6"
        >
          <h2 class="text-6xl font-black italic mb-1">l10n</h2>
          <p class="text-xl font-bold opacity-90 uppercase tracking-widest">
            Localization
          </p>
          <p class="text-sm opacity-75 mt-1">(L + 10 letters + N)</p>
        </div>
        <p class="text-center text-orange-400 font-semibold text-lg px-4 mb-8">
          Adapt software to a specific region and language.
        </p>
        <ul class="w-full space-y-4">
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-orange-500/30"
          >
            <span class="text-3xl">üí¨</span>
            <span class="text-orange-300 font-medium text-xl"
              >Text translations</span
            >
          </li>
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-orange-500/30"
          >
            <span class="text-3xl">üé®</span>
            <span class="text-orange-300 font-medium text-xl"
              >Cultural adjustments</span
            >
          </li>
          <li
            class="flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-orange-500/30"
          >
            <span class="text-3xl">üåÆ</span>
            <span class="text-orange-300 font-medium text-xl"
              >Local elements</span
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="relative z-10 px-0 md:px-12 mt-16 mb-10">
      <div
        class="bg-slate-800 rounded-3xl shadow-xl overflow-hidden border border-slate-700"
      >
        <div
          class="bg-slate-900 text-white text-center py-3 font-bold tracking-widest text-xl uppercase"
        >
          Key Differences
        </div>
        <table class="w-full text-left text-lg">
          <tr class="border-b border-slate-700">
            <th class="p-4 bg-slate-800/50 font-bold text-slate-400 w-1/4"
              >Goal</th
            >
            <td class="p-4 font-semibold text-blue-400 w-1/3"
              >Prepare the system</td
            >
            <td class="p-4 font-semibold text-orange-400 w-1/3 italic"
              >Adapt to a language</td
            >
          </tr>
          <tr class="border-b border-slate-700">
            <th class="p-4 bg-slate-800/50 font-bold text-slate-400"
              >Timing</th
            >
            <td class="p-4 font-semibold text-blue-400">Before translating</td>
            <td class="p-4 font-semibold text-orange-400 italic">After</td>
          </tr>
          <tr>
            <th class="p-4 bg-slate-800/50 font-bold text-slate-400"
              >Scope</th
            >
            <td class="p-4 font-semibold text-blue-400">Global</td>
            <td class="p-4 font-semibold text-orange-400 italic">Regional</td>
          </tr>
          <tr>
            <th class="p-4 bg-slate-800/50 font-bold text-slate-400"
              >Who does it</th
            >
            <td class="p-4 font-semibold text-blue-400">Programmer</td>
            <td class="p-4 font-semibold text-orange-400 italic">Translator</td>
          </tr>
        </table>
      </div>
    </div>

    <PostFooterBar
      middleHtml='<span class="text-blue-400 font-black italic">i18n</span> allows translating ‚Ä¢ <span class="text-orange-400 font-black italic">l10n</span> is the translation.'
    />
  </div>

  <style>
    .glass-tag {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>
</BlogPostLayout>
