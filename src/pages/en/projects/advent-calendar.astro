---
import CodeBlock from "../../../components/common/CodeBlock.tsx";
import ProjectLayout from "../../../layouts/ProjectLayout.astro";

// --- METADATA ---
const pageTitle = "Interactive Advent Calendar";
const pageDescription =
  "Discover the Interactive Advent Calendar, developed in Next.js with a pixel art style. Each day reveals a surprise as we celebrate the countdown to Christmas.";
const pageKeywords = [
  "Advent Calendar",
  "interactive",
  "Christmas",
  "Next.js",
  "React",
  "pixelart",
  "web development",
  "projects",
  "Christopher VillamarÃ­n",
  "xeland314",
  "Ecuador",
].join(", ");

const pageSlug = "advent-calendar";
const pageAuthor = "Christopher VillamarÃ­n";
const applicationName = "Christopher VillamarÃ­n Portfolio";
const pageUrl = "https://xeland314.github.io/en/projects/advent-calendar/";
const pageImage =
  "https://xeland314.github.io/images/advent_calendar_preview.png";
const pageImageAlt = "Preview of the Interactive Advent Calendar";
const pageRobots = "index, follow";
