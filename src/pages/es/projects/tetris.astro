---
import CodeBlock from "../../../components/common/CodeBlock";
import ProjectLayout from "../../../layouts/ProjectLayout.astro";

// Metadatos
const title = "Poli - Tetris - Christopher Villamarín Projects";
const description =
  "Descubre Poli - Tetris, un proyecto de videojuego inspirado en el clásico Tetris, desarrollado en Java. Aprende a jugar, utiliza controles personalizables y configura diferentes niveles de dificultad.";
const keywords = [
  "Poli Tetris",
  "videojuegos",
  "Tetris",
  "Java",
  "proyectos",
  "Christopher Villamarín",
  "xeland314",
  "desarrollo de videojuegos",
  "Linux",
  "tecnología",
  "Ecuador",
].join(", ");
const authors =  "Christopher Alexander Villamarín Pila";

const ogDescription =
  "Descubre Poli - Tetris, un videojuego inspirado en el clásico Tetris, desarrollado en Java. Configura niveles de dificultad, controla piezas y vive la experiencia en Linux.";
const ogUrl = "https://xeland314.github.io/projects/es/poli-tetris/";
const ogImage = "https://raw.githubusercontent.com/xeland314/PoliTetris/ff11e56a969100a17380a9b8b5713eb340b8ce19/images/tetris.png";
const imageAlt = "Vista previa del proyecto Poli - Tetris";
const canonicalUrl = "https://xeland314.github.io/es/projects/tetris/";
const robots = "index, follow";
---

<ProjectLayout
  title={title}
  description={description}
  keywords={keywords}
  author={authors}
  description={ogDescription}
  url={ogUrl}
  image={ogImage}
  imageAlt={imageAlt}
  canonical={canonicalUrl}
  applicationName="Tetris"
  robots={robots}
>
  <div class="p-0 sm:p-6">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Poli - Tetris</h1>
      <img
        src="https://raw.githubusercontent.com/xeland314/PoliTetris/ff11e56a969100a17380a9b8b5713eb340b8ce19/images/tetris.png"
        alt="Tetris"
        class="mx-auto mb-6"
      />
    </div>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Iniciar el juego</h2>
      <p class="mb-4">
        En Linux ejecutar los comandos por terminal depende de tu versión de
        Java:
      </p>
      <div>
        <h3 class="text-xl font-bold mb-2">Java 11</h3>
        <CodeBlock code="java -jar Tetris-11.jar" client:load />
      </div>
      <div class="mt-4">
        <h3 class="text-xl font-bold mb-2">Java 17</h3>
        <CodeBlock code="java -jar Tetris-17.jar" client:load />
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Controles</h2>
      <p class="mb-4">
        La interfaz gráfica no posee ningún botón. Se han implementado métodos
        de teclado para jugar el juego como se muestra en la esquina inferior
        derecha del Tetris.
      </p>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">Movimientos</h3>
        <ul class="list-disc pl-6 space-y-2">
          <li>↑: Rotar 45° pieza</li>
          <li>↓: Mover pieza hacia abajo</li>
          <li>←: Mover pieza hacia la izquierda</li>
          <li>→: Mover pieza hacia la derecha</li>
          <li>Space: Mover la pieza al fondo</li>
        </ul>
      </div>
      <div class="mb-6">
        <h3 class="text-xl font-bold mb-2">Cambiar dificultades</h3>
        <ul class="list-disc pl-6 space-y-2">
          <li>1: Fácil</li>
          <li>2: Normal</li>
          <li>3: Díficil</li>
        </ul>
      </div>
      <div>
        <h3 class="text-xl font-bold mb-2">Otros</h3>
        <ul class="list-disc pl-6 space-y-2">
          <li>P: Pausar juego</li>
          <li>R: Iniciar un juego nuevo</li>
          <li>T: Mostrar tabla de puntuaciones</li>
        </ul>
      </div>
    </section>
  </div>
</ProjectLayout>
