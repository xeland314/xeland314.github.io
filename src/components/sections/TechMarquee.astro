---
// src/components/StackMarquee.astro

const languages = [
  { title: "Golang", color: "text-blue-500" },
  { title: "Python", color: "text-yellow-600" },
  { title: "Django", color: "text-green-800" },
  { title: "FastAPI", color: "text-teal-500" },
  { title: "HTML", color: "text-orange-600" },
  { title: "CSS", color: "text-blue-600" },
  { title: "JavaScript", color: "text-yellow-400" },
  { title: "TypeScript", color: "text-blue-500" },
  { title: "React", color: "text-cyan-400" },
  { title: "Next.js", color: "text-black dark:text-white" },
  { title: "Astro", color: "text-orange-500" },
  { title: "Dart", color: "text-blue-400" },
  { title: "Flutter", color: "text-blue-300" },
  { title: "Java", color: "text-red-600" },
  { title: "SQLite", color: "text-blue-400" },
  { title: "Postgres", color: "text-blue-700" },
  { title: "Docker", color: "text-blue-500" },
  { title: "Linux", color: "text-gray-500" },
  { title: "Git", color: "text-orange-600" },
];

const marqueeItems = [...languages, ...languages];
---

<section
  class="py-8 bg-gray-50 dark:bg-gray-950 border-y border-gray-100 dark:border-gray-900 overflow-hidden group"
>
  <div class="relative w-full">
    <div
      class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-gray-50 dark:from-gray-950 to-transparent z-10"
    >
    </div>
    <div
      class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-gray-50 dark:from-gray-950 to-transparent z-10"
    >
    </div>

    <div class="flex marquee-container">
      <div
        class="flex gap-12 items-center animate-marquee whitespace-nowrap group-hover:pause"
      >
        {
          marqueeItems.map((lang) => (
            <div class="flex items-center gap-2 font-mono text-sm md:text-base transition-transform hover:scale-110">
              <span class="text-gray-400 dark:text-gray-600 font-bold">
                &lt;
              </span>
              <span class={`${lang.color} font-extrabold tracking-tight`}>
                {lang.title}
              </span>
              <span class="text-gray-400 dark:text-gray-600 font-bold">
                /&gt;
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .animate-marquee {
    display: flex;
    width: max-content;
    animation: marquee 60s linear infinite;
  }

  .group-hover\:pause:hover {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
