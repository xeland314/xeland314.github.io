---
import ThemeToggleButton from "../themes/ThemedToggleIconButton.tsx";

const { lang = "es" } = Astro.props;
const heroImage = "/images/gato.svg";

const texts: Record<
  string,
  { name: string; role: string; specialty: string; exp: string; hook: string }
> = {
  es: {
    name: "Christopher Villamarín",
    role: "Desarrollador",
    specialty: "Backend",
    exp: "+3 años exp - @xeland314",
    hook: "Transformo ideas en productos de software",
  },
  en: {
    name: "Christopher Villamarín",
    role: "Developer",
    specialty: "Backend",
    exp: "+3 years exp - @xeland314",
    hook: "Transforming challenges into high-impact software",
  },
};

const T = texts[lang];
---

<div
  class="h-full bg-blue-600 rounded-3xl p-6 text-white flex flex-col justify-between overflow-hidden relative group"
>
  {/* Decorative background circle */}
  <div
    class="absolute -top-10 -right-10 w-40 h-40 bg-blue-500 rounded-full opacity-50 group-hover:scale-110 transition-transform duration-700"
  >
  </div>

  <div class="relative z-10 flex flex-col sm:flex-row items-center sm:items-center gap-5">
    <div
      class="w-24 h-24 rounded-2xl overflow-hidden shadow-xl bg-white/10 shrink-0"
    >
      <img
        src={heroImage}
        alt="Gato"
        class="w-full h-full object-contain"
        width="96"
        height="96"
        loading="eager"
        title="Gato"
        fetchpriority="high"
      />
    </div>

    <div class="flex flex-col items-center sm:items-start">
      <h1 class="text-xl font-bold leading-tight mb-1 text-center sm:text-left">
        {T.name}
      </h1>
      <p class="text-xs text-blue-100 font-light text-center sm:text-left">
        {lang === "es" ? T.role : ""}
        <span class="font-bold">{T.specialty}</span>
        {lang === "en" ? T.role : ""}
      </p>

      <span
        class="mt-3 px-2 py-0.5 text-[10px] font-bold bg-white/20 rounded-full border border-white/10 w-fit"
      >
        {T.exp}
      </span>
    </div>
  </div>

  {/* Philosophy Highlights */}
  <div class="relative z-10 my-2 flex flex-col gap-2">
    <h2 class="text-blue-200 text-[11px] font-bold uppercase tracking-wider mb-1">{ T.hook }</h2>
    <div class="flex items-center gap-2">
      <div class="w-1.5 h-1.5 rounded-full bg-blue-300"></div>
      <p class="text-[10px] font-medium text-blue-50">
      {lang === "es" ? "Aplicaciones multiplataforma: " : "Multiplatform Apps: "} Web, Android, Linux, Windows
      </p>
    </div>
    <div class="flex items-center gap-2">
      <div class="w-1.5 h-1.5 rounded-full bg-blue-300"></div>
      <p class="text-[10px] font-medium text-blue-50">
        {lang === "es" ? "CI/CD: Despliegue a Producción" : "CI/CD: Production Deployment"}
      </p>
    </div>
    <div class="flex items-center gap-2">
      <div class="w-1.5 h-1.5 rounded-full bg-blue-300"></div>
      <p class="text-[10px] font-medium text-blue-50">
        {lang === "es" ? "Código Limpio & Testeado" : "Clean Code & Automated Testing"}
      </p>
    </div>
  </div>

  <div class="relative z-10 mt-2 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <a
        href="https://linkedin.com/in/christopher-villamarin"
        target="_blank"
        class="text-white/80 hover:text-white transition-colors"
        title="LinkedIn"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
          ><path
            d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
          ></path></svg
        >
      </a>
      <a
        href="https://github.com/xeland314"
        target="_blank"
        class="text-white/80 hover:text-white transition-colors"
        title="GitHub"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"
          ><path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path></svg
        >
      </a>
      <a
        href="https://instagram.com/xeland314"
        target="_blank"
        class="text-white/80 hover:text-white transition-colors"
        title="Instagram"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
      </a>
      <a
        href="https://threads.com/@xeland314"
        target="_blank"
        class="text-white/80 hover:text-white transition-colors"
        title="Threads"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-at-sign"><circle cx="12" cy="12" r="4"></circle><path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-4 8"></path></svg>
      </a>

      <button
        id="copy-email-bento"
        class="text-white/80 hover:text-white transition-colors relative group"
        title={lang === "es" ? "Copiar correo" : "Copy email"}
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
        <span id="copy-success-bento" class="absolute -top-8 left-1/2 -translate-x-1/2 bg-white text-blue-600 text-[10px] font-bold px-2 py-1 rounded opacity-0 transition-opacity pointer-events-none">
            {lang === 'es' ? '¡Copiado!' : 'Copied!'}
        </span>
      </button>
    </div>

    <div class="flex items-center gap-2 text-sm">
      <a href={lang === "es" ? "/en/" : "/"} class="text-white">{lang === "es" ? "EN" : "ES"}</a>
      <ThemeToggleButton client:idle />
    </div>
  </div>
</div>

<script>
  const copyBtn = document.getElementById("copy-email-bento");
  const successMsg = document.getElementById("copy-success-bento");

  const u = "christopher.villamarin";
  const d = "protonmail.com";

  copyBtn?.addEventListener("click", () => {
    navigator.clipboard.writeText(`${u}@${d}`);
    successMsg?.classList.remove("opacity-0");
    setTimeout(() => successMsg?.classList.add("opacity-0"), 2000);
  });
</script>
