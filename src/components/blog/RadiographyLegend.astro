---
interface LegendItem {
  bgColor: string;
  shadowRgba: string; // e.g., "rgba(14,165,233,0.5)"
  textColor: string;
  title: string;
  description: string;
}

interface Props {
  items: LegendItem[];
  gap?: string;
  minWidth?: string;
}

const { items, gap = "gap-6", minWidth = "min-w-[200px]" } = Astro.props;
---

<div class={`flex flex-col justify-center ${gap} ${minWidth}`}>
  {
    items.map((item) => (
      <div class="flex items-start gap-3">
        <div class={`w-4 h-4 rounded-full ${item.bgColor} mt-1`} style={`box-shadow: 0 0 10px ${item.shadowRgba}`} />
        <div>
          <p class={`text-lg font-bold uppercase tracking-tighter ${item.textColor}`}>{item.title}</p>
          <p class="text-md text-slate-400" set:html={item.description} />
        </div>
      </div>
    ))
  }
</div>
