---
interface Props {
  logoPath?: string;
  positionClass?: string;
  middleHtml?: string;
}

const {
  logoPath = "/assets/images/logo_v3.png",
  positionClass = "absolute bottom-0 left-0 right-0",
  middleHtml = "",
} = Astro.props;
---

<div
  class={`${positionClass} z-50 bg-slate-900 py-6 px-12 flex flex-row items-center justify-between`}
>
  <div class="flex items-center gap-3 mb-0">
    <img
      src={logoPath}
      alt="logo"
      title="logo"
      class="w-10 h-10 rounded-lg shadow-md border border-slate-700"
      height="40"
      width="40"
    />
    <span class="text-slate-400 font-bold text-xl tracking-tight"
      >xeland314</span
    >
  </div>

  <div
    class="text-white text-2xl font-medium text-center absolute left-1/2 -translate-x-1/2 mb-0"
  >
    {middleHtml ? <span set:html={middleHtml} /> : <slot />}
  </div>

  <div class="w-24 flex justify-end">
    <slot name="right" />
  </div>
</div>
