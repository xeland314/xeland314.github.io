---
// src/components/LanguageCategory.astro
// Componente Astro puro

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="w-full px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-lg shadow-md"
>
  <div class="mb-4">
    <h4 class="text-2xl font-bold text-center text-gray-800 dark:text-white">
      {title}
    </h4>
  </div>
  <div class="w-full flex flex-wrap justify-evenly gap-4">
    <slot />
  </div>
</div>
