---
// src/components/LanguageCategory.astro
// Componente Astro puro

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="w-full bg-gray-200 dark:bg-gray-800 rounded-lg px-4 py-2 shadow-md">
    <div class="mb-4">
        <h4
            class="text-2xl font-bold text-center text-gray-800 dark:text-white"
        >
            {title}
        </h4>
    </div>
    <div class="w-full flex flex-wrap justify-evenly gap-4">
        <slot />
    </div>
</div>
