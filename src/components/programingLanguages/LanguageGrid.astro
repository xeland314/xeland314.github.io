---
// src/components/LanguageGrid.astro
// Componente Astro puro

import LanguageCategory from "./LanguageCategory.astro";
import LanguageImage from "./LanguageImage.astro";

const { lang = "es" } = Astro.props;

const texts: Record<string, Record<string, string>> = {
    es: {
        backend: "Backend",
        frontend: "Frontend",
        database: "Bases de Datos & Cache",
        cloud: "Nube & Otros",
    },
    en: {
        backend: "Backend",
        frontend: "Frontend",
        database: "Databases & Cache",
        cloud: "Cloud & Others",
    },
};

const T = texts[lang];
---

<div class="w-full justify-between space-y-4">
    <LanguageCategory title={T.backend}>
        <LanguageImage title="Golang" image="go" />
        <LanguageImage title="Java" image="java" />
        <LanguageImage title="Python" image="py" />
        <LanguageImage title="Django" image="django" />
        <LanguageImage title="Flask" image="flask" />
        <LanguageImage title="FastAPI" image="fastapi" />
        <LanguageImage title="Bash" image="bash" />
    </LanguageCategory>

    <LanguageCategory title={T.frontend}>
        <LanguageImage title="JavaScript" image="js" />
        <LanguageImage title="TypeScript" image="ts" />
        <LanguageImage title="HTML" image="html" />
        <LanguageImage title="CSS" image="css" />
        <LanguageImage title="HTMX" image="htmx" />
        <LanguageImage title="TailwindCss" image="tailwind" />
        <LanguageImage title="React" image="react" />
        <LanguageImage title="Next.js" image="nextjs" />
        <LanguageImage title="Astro" image="astro" />
        <LanguageImage title="Flutter" image="flutter" />
    </LanguageCategory>

    <LanguageCategory title={T.database}>
        <LanguageImage title="Sqlite" image="sqlite" />
        <LanguageImage title="Postgres" image="postgres" />
        <LanguageImage title="Redis" image="redis" />
        <LanguageImage title="RabbitMQ" image="rabbitmq" />
    </LanguageCategory>

    <LanguageCategory title={T.cloud}>
        <LanguageImage title="AWS" image="aws" />
        <LanguageImage title="Cloudflare" image="cloudflare" />
        <LanguageImage title="Linux" image="linux" />
        <LanguageImage title="Postman" image="postman" />
        <LanguageImage title="Docker" image="docker" />
        <LanguageImage title="Nginx" image="nginx" />
        <LanguageImage title="Git" image="git" />
    </LanguageCategory>
</div>
